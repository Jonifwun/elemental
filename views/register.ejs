<%- include('partials/header.ejs') %>



<div class="container card shadow p-5 mb-5 blurred rounded register">
        <h1>Register</h1>
            <form action="/register" method="POST">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <div class="form-group">
                            <label for="username">Username*</label>
                            <input type="text" class="form-control" id="username" name='username' placeholder="Username" value="<%= username %>" required>
                        </div>
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input type="text" class="form-control" id="location" name='location' placeholder="Location" value="<%= location %>">
                        </div>
                        <div class="form-group">
                            <label for="department">Department</label>
                            <input type="text" class="form-control" id="department" name='department' placeholder="Department" value="<%= department %>">
                        </div>
                    </div>
                    <div class="col-md-6 form-group">
                        <div class="form-group">
                            <label for="email">Email*</label>
                            <input type="text" class="form-control" id="email" name='email' placeholder="Email" value="<%= email %>" required>
                        </div>
                        <div class="form-group">
                            <label for="new-password">Password*</label>
                            <input type="password" class="form-control" id="new-password" name='password' placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <label for="new-password-confirm">Confirm Password* <div id="validation"></div></label>
                            <input type="password" class="form-control" id="new-password-confirm" placeholder="Password" required>
                        </div> 
                            
                    </div>
                </div>
                    <button class="btn btn-info loginregister-btn">Submit</button>
            </form>
</div>
<script src="/javascripts/validation.js"></script>
<%- include('partials/footer.ejs') %>
