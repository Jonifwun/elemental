<%- include('partials/header.ejs') %>

<div class="container-fluid">
    <div class="row justify-content-center align-items-center">
        <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3 mx-auto">
            <div class="card login shadow p-5 mb-5 blurred rounded">
                    <h1>Forgot Password</h1>
                   
                        <form action="/reset/<%= token %>?_method=PUT" method="POST">
                            <div class="form-group">
                                <label for="new-password">New Password</label>
                                <input type="password" class="form-control" id="new-password" name='newPassword' placeholder="New password" autofocus>
                            </div>                             
                            <div class="form-group">
                                <label for="new-password-confirm">Confirm Password <div class="validation" id="pass-validation"></div></label>
                                <input type="password" class="form-control" name="confirmation" id="new-password-confirm" placeholder="New password">
                            </div>  
                            <div >
                                <button class="btn btn-info submit-btn">Submit</button>
                            </div>
                        </form>
                    
                
            </div>
        </div>
    </div>
</div>




<%- include('partials/footer.ejs') %>